# This PKGBUILD is not a full PKGBUILD
# pkgname, pkgver, source, and sha1sums are to be generated
pkgdesc='Profiling tool used to generate profiles and peek at an application system resources usage'
pkgrel=1
arch=(x86_64)
license=(MIT)
url='https://github.com/exapsy/peekprof'
makedepends=(golang)

build() {
  cd "$srcdir/peekprof-$pkgver"
  go build -o ./peekprof
}

package() {
  cd "$srcdir/peekprof-$pkgver"
  install -Dm755 ./peekprof "$pkgdir/usr/bin/peekprof"
  install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -Dm644 LICENSE.md "$pkgdir/usr/share/licenses/$pkgname/LICENSE.md"
  # install -Dm644 exports/completion.bash "$pkgdir/usr/share/bash-completion/completions/peekprof"
  # install -Dm644 exports/completion.fish "$pkgdir/usr/share/fish/completions/peekprof.fish"
  # install -Dm644 exports/completion.zsh "$pkgdir/usr/share/zsh/site-functions/_peekprof"
}
